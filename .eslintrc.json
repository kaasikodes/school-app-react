{
  "extends": ["react-app", "react-app/jest", "prettier"],
  "rules": {
    "eqeqeq": "error",
    "no-shadow": "off",
    // for development
    // "no-unused-vars": "error",
    // "no-unused-labels": "error",
    // "no-unused-expressions": "error",
    // for development

    "@typescript-eslint/no-shadow": "off",
    "max-lines": [
      1,
      {
        "max": 1000
      }
    ],

    "max-params": [
      1,
      {
        "max": 5
      }
    ]
  }
}
